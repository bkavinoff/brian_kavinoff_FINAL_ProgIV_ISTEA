<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kavinoff.brian.tp.brian_kavinoff_parcial_2">

    <uses-permission android:name="android.permission.VIBRATE" />
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/app_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashscreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".BusquedaActivity" />
        <activity android:name=".DetalleActivity" />
        <activity android:name=".AcercaDeActivity" />
        <activity android:name=".SettingActivity" />
        <activity android:name=".ModificarActivity" />
        <activity android:name=".AgregarActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".RegistroActivity"></activity>
    </application>

</manifest>